<UserControl x:Class="posk.Controls.ItemMesaPedido"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:posk.Controls"
             mc:Ignorable="d">
    <Button x:Name="btnMesa" Style="{StaticResource BtnClear}" Height="60" Width="125" Background="#055b25" Margin="8">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="lbMesa" Width="50" Grid.Column="0" Content="2" FontSize="36" HorizontalContentAlignment="Center" VerticalAlignment="Center"/>
            <Label x:Name="lbEstado" Grid.Column="1" Content="Disponible" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Button>
</UserControl>
