<UserControl x:Class="posk.Controls.ItemPagaCon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:posk.Controls"
             mc:Ignorable="d" 
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
            TextElement.FontWeight="Regular"
            TextElement.FontSize="13"
            TextOptions.TextFormattingMode="Ideal"
            TextOptions.TextRenderingMode="Auto">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="txtPagaCon" Text="" Padding="2" materialDesign:HintAssist.Hint="Paga con" Style="{StaticResource MaterialDesignFloatingHintTextBox}" PreviewTextInput="ValidarNumero" MinWidth="100"/>
            <TextBox x:Name="txtVuelto" Text="" Padding="2" materialDesign:HintAssist.Hint="Vuelto" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="16 0 0 0" IsEnabled="False" MinWidth="150"/>
        </StackPanel>
    </Grid>
</UserControl>
