<UserControl x:Class="posk.Controls.ItemFoto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:posk.Controls"
        mc:Ignorable="d" 
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:Converters="clr-namespace:MaterialDesignThemes.Wpf.Converters;assembly=MaterialDesignThemes.Wpf">
    <Button x:Name="btnImagen" Height="120" Width="160" Padding="0" Background="#FFD8D8D8" Style="{StaticResource BtnClear}" VerticalAlignment="Top" Margin="0 0 0 0">
        <Grid Background="#FFD8D8D8">
            <materialDesign:PackIcon Kind="Camera" VerticalAlignment="Center" HorizontalAlignment="Center" Height="80" Width="80" Foreground="#FF020202"/>
            <Image x:Name="imagen" Height="120" Width="160"/>
        </Grid>
    </Button>
</UserControl>
