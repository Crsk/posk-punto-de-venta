<UserControl x:Class="posk.Controls.ItemDelivery"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:posk.Controls"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid Width="180" Margin="0 0 0 8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="16"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Width="16" Grid.Column="0" Background="LightGray" Height="36">
            <Label x:Name="lbServirLlevar" Content="S" VerticalAlignment="Center" Foreground="#FFDF6D0E"/>
        </Grid>
        <Button x:Name="btnItem" Grid.Column="1" Background="#FFDF6D0E" Height="36" Style="{StaticResource BtnClear}">
            <Label x:Name="lbNombre" Content="Christopher" Grid.Column="1" Foreground="#FFDDE0E2" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Light"/>
        </Button>
    </Grid>
</UserControl>
