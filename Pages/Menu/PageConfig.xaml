                    <Ellipse x:Name="ellipseInternetStatus" Width="15" Height="15" Fill="SeaGreen" Margin="0,0,8,0"/>
                </StackPanel>
            </Border>
            <Border>
                <StackPanel Orientation="Horizontal">
                    <Label Content="SECCIÓN DE COMPRAS" Margin="4,0,0,0" VerticalContentAlignment="Center"/>
